<ContentControl x:Class="HGM.Hotbird64.LicenseManager.Controls.RibbonMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:icons="clr-namespace:HGM.Hotbird64.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="72" d:DesignWidth="72">
  <Grid Height="64" Width="72">
    
    <Grid.RowDefinitions>
      <RowDefinition Height="32"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <Image x:Name="ImageSource" Grid.Row="0" Height="32" Width="32" Stretch="Uniform"/>
    <ContentPresenter x:Name="IconContent" Grid.Row="0" Height="32" Width="32" />
    
    <TextBlock HorizontalAlignment="Center" x:Name="TextBlock" TextAlignment="Center" Grid.Row="1" TextWrapping="Wrap" />
  </Grid>
</ContentControl>
